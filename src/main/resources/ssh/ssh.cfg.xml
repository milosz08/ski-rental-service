<?xml version="1.0" encoding="UTF-8"?>
<ssh-configuration>
  <property name="ssh.host">${SKI_SSH_HOST}</property>
  <property name="ssh.login">${SKI_SSH_LOGIN}</property>
  <property name="ssh.private-key.path">${SKI_SSH_PRIVATE_KEY_PATH}</property>
  <property name="ssh.known-hosts.path">${SKI_SSH_KNOWN_HOSTS_PATH}</property>
  <commands>
    <create-mailbox>${SKI_SSH_CREATE_MAILBOX_CMD}</create-mailbox>
    <update-mailbox-password>${SKI_SSH_UPDATE_MAILBOX_CMD}</update-mailbox-password>
    <delete-mailbox>${SKI_SSH_DELETE_MAILBOX_CMD}</delete-mailbox>
    <set-mailbox-capacity>${SKI_SSH_SET_MAILBOX_CAPACITY_CMD}</set-mailbox-capacity>
  </commands>
</ssh-configuration>
