<?xml version="1.0" encoding="UTF-8"?>
<mail-configuration>
  <property name="mail.smtp.host">${SKI_SMTP_HOST}</property>
  <property name="mail.smtp.port">${SKI_SMTP_PORT}</property>
  <property name="mail.smtp.user">${SKI_SMTP_USERNAME}</property>
  <property name="mail.smtp.pass">${SKI_SMTP_PASSWORD}</property>
  <property name="mail.smtp.domain">${SKI_SMTP_DOMAIN}</property>
  <property name="mail.smtp.socketFactory.port">${SKI_SMTP_PORT}</property>
  <property name="mail.smtp.socketFactory.class">javax.net.ssl.SSLSocketFactory</property>
  <property name="mail.smtp.auth">true</property>
  <property name="mail.smtp.starttls.enable">true</property>
  <property name="mail.smtp.socketFactory.fallback">false</property>
</mail-configuration>
